extends layout

//- include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= character.name
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          .card.card-primary
            .card-block
              h1.card-title Character Stats
              span.badge.badge-warning= character.hp 
              span.badge.badge-warning= character.body 
              span.badge.badge-warning= character.mind 
              span.badge.badge-warning= character.spirit
              i.fas.fa-heart
              i.fas.fa-heart
              i.fas.fa-heart
              i.fas.fa-heart
              i.far.fa-heart
          .card.card-primary
            .card-block
              h1.card-title Abilities
              each ability in character.abilities
                ul= ability
              else
                ul= noAbilities
              form(action=`/users/6627e3747ca08ee65e7f8ec5/characters/`, method="post", role="form")
              - if (error == "val")
                .alert.alert-danger(role="alert") All fields required, please try again
              .form-group.row
                label.col-10.col-sm-2.col-form-label(for="abilities")
                .col-12.col-sm-10
                input#name.form-control(name="abilities")
              a.btn.btn-primary.float-right(href='/location/review/new') Add Ability
        .col-12.col-md-6
          .card.card-primary
            .card-block
              if lockdown
                h1.card-title Locked out 
                h2= lockdown.startDate
                h2= lockdown.endDate
                h2= lockdown.reason
                i.fas.fa-calendar
                i.fas.fa-calendar
                i.far.fa-calendar
                i.far.fa-calendar
                i.far.fa-calendar
                i.far.fa-calendar
                i.far.fa-calendar
                i.far.fa-calendar   
                i.far.fa-calendar   
                i.far.fa-calendar
                i.far.fa-calendar
                i.far.fa-calendar
                i.far.fa-calendar
                i.far.fa-calendar  
              else 
                h1.card-title Available!                                                                                                                                                                         
          .card.card-primary.review-card
            .card-block
              h1.card-title Magic Items
              each item in character.magicItems
                ul= item
              else
                ul= noMagicItems
              form(action=`/users/6627e3747ca08ee65e7f8ec5/characters/`, method="post", role="form")
              - if (error == "val")
                .alert.alert-danger(role="alert") All fields required, please try again
              .form-group.row
                label.col-10.col-sm-2.col-form-label(for="magicItems")
                .col-12.col-sm-10
                input#name.form-control(name="magicItems")
              a.btn.btn-primary.float-right(href='/location/review/new') Add Magic Item
              //- each facility in location.facilities
                span.badge.badge-warning
                  i.fa.fa-check
                  | &nbsp;#{facility}
                | &nbsp;
      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              h2.card-title Notes
              p.notes= character.notes 
              form(action=`/users/6627e3747ca08ee65e7f8ec5/characters/`, method="post", role="form")
              - if (error == "val")
                .alert.alert-danger(role="alert") All fields required, please try again
              .form-group.row
                label.col-10.col-sm-2.col-form-label(for="notes")
                .col-12.col-sm-10
                input#name.form-control(name="notes")
              a.btn.btn-primary.float-right(href='/location/review/new') Add Notes
              //- each review in location.reviews
                .row.review
                  .col-12.no-gutters.review-header
                    span.rating
                      +outputRating(review.rating)
                    span.reviewAuthor #{review.author}
                    small.reviewTimestamp #{review.timestamp}
                  .col-12
                    p !{(review.reviewText).replace(/\n/g, '<br/>')}
    .col-12.col-lg-3
      //- p.lead #{location.name} #{sidebar.context}
      //- p= sidebar.callToAction