block content
  .row.banner
    .col-12
      //- h1= pageHeader.title
      h1 Character Info
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          //- p.rating
          //-   +outputRating(location.rating)
          //- p= location.address
          .card.card-primary
            .card-block
              h1.card-title Character Stats
              i.fas.fa-heart
              i.fas.fa-heart
              i.fas.fa-heart
              i.fas.fa-heart
              i.far.fa-heart
              
              //- each time in location.openingTimes

                p.card-text
                  | #{time.days} :
                  if time.closed
                    | closed
                  else
                    | #{time.opening} - #{time.closing}
          .card.card-primary
            .card-block
              h1.card-title Abilities
              ul Resist Type (Fire)
              ul RT (cold)
              ul RT (wind)
              ul RT (earth)
              ul RT (holy)
              ul RT (curse)
              ul RT (psychic)
              ul RT (perfection)
              ul Magic Burst
              Ul Summon Creature
              ul Detect magic 
              ul Foley Illusion
              a.btn.btn-primary.float-right(href='/location/review/new') Add Ability
        .col-12.col-md-6
          .card.card-primary
            .card-block
              h1.card-title Locked out 4/29/24 - 5/15/24
              i.fas.fa-calendar
              i.fas.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar
