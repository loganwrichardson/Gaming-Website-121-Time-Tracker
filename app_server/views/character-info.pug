extends layout

//- include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          .card.card-primary
            .card-block
              h1.card-title Character Stats
              each stat in character.stats
                span.badge.badge-warning= stat
              i.fas.fa-heart
              i.fas.fa-heart
              i.fas.fa-heart
              i.fas.fa-heart
              i.far.fa-heart
          .card.card-primary
            .card-block
              h1.card-title Abilities
              each ability in character.abilities
                ul= ability
              a.btn.btn-primary.float-right(href='/location/review/new') Add Ability
        .col-12.col-md-6
          .card.card-primary
            .card-block
              h1.card-title Locked out 4/29/24 - 5/15/24
              i.fas.fa-calendar
              i.fas.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar   
              i.far.fa-calendar   
              i.far.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar
              i.far.fa-calendar                                                                                                                                                                           
          .card.card-primary.review-card
            .card-block
              h1.card-title Magic Items
              each item in character.magicItems 
                ul= item
              a.btn.btn-primary.float-right(href='/location/review/new') Add Item                  
              //- each facility in location.facilities
                span.badge.badge-warning
                  i.fa.fa-check
                  | &nbsp;#{facility}
                | &nbsp;
      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              h2.card-title Notes
              p.notes= character.notes 
              a.btn.btn-primary.float-right(href='/location/review/new') Add Notes
              //- each review in location.reviews
                .row.review
                  .col-12.no-gutters.review-header
                    span.rating
                      +outputRating(review.rating)
                    span.reviewAuthor #{review.author}
                    small.reviewTimestamp #{review.timestamp}
                  .col-12
                    p !{(review.reviewText).replace(/\n/g, '<br/>')}
    .col-12.col-lg-3
      //- p.lead #{location.name} #{sidebar.context}
      //- p= sidebar.callToAction