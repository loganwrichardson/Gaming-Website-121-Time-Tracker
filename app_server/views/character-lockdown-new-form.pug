extends layout

block content
  .row.banner
    .col-12
      h1 Add New Character Lockdown

  .row
    .col-12.col-md-8
      form(action="/character", method="get", role="form")
        - if (error == "val")
          .alert.alert-danger(role="alert") All fields required, please try again
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="characterName") Character Name
          .col-12.col-sm-10
            input#name.form-control(name="characterName")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="startDate") Start Date
          .col-12.col-sm-10
            input#name.form-control(name="startDate")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="endDate") End Date
          .col-12.col-sm-10
            input#name.form-control(name="endDate") 
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="review") Reason
          .col-12.col-sm-10
            textarea#review.form-control(name="review", rows="5")
        button.btn.btn-primary.float-right Add New Lockdown
    .col-12.col-md-4